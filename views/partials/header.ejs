<header id="header">
    <a href="/" title="Home Page" id="logo-link">
        <picture>
            <!-- Assuming a logo image is used -->
            <source media="(min-width: 600px)" srcset="/images/site/logo.png">
            <img src="/images/site/logo-small.png" alt="CSE Motors Logo">
        </picture>
    </a>
    
    <nav id="top-nav">
        <!-- Task 1: Welcome link, visible only when logged in -->
        <% if (locals.loggedin) { %>
            <a href="/account/" title="Go to account management" id="welcome-link">
                Welcome <%= locals.accountData.account_firstname %>
            </a>
        <% } %>

        <div id="account-links">
            <!-- Task 1: "My Account" link (Login/Register) - hidden when logged in -->
            <% if (!locals.loggedin) { %>
                <a href="/account/login" title="Click to log in or register" id="my-account-link">
                    My Account
                </a>
            <% } %>

            <!-- Task 1: "Logout" link - visible only when logged in -->
            <% if (locals.loggedin) { %>
                <a href="/account/logout" title="Click to log out" id="logout-link">
                    Logout
                </a>
            <% } %>
        </div>
    </nav>
</header>

